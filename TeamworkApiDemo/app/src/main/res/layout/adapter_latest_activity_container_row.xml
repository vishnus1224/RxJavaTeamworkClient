<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/adapterLatestActivityRowAvatar"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_launcher"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/adapterLatestActivityRowTitle"
        android:layout_toLeftOf="@id/adapterLatestActivityRowAvatar"
        android:text="Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/adapterLatestActivityRowDescription"
        android:layout_below="@id/adapterLatestActivityRowTitle"
        android:text="Description"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@id/adapterLatestActivityRowTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>