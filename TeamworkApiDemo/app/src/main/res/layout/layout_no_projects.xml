<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layoutNoProjects"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@android:drawable/checkbox_on_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="No projects"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="OK, you don't have any projects yet so\n just create one! Click the button below \n to get started."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/noProjectsButtonCreateProject"
        android:layout_marginTop="20dp"
        android:text="Create the first project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>