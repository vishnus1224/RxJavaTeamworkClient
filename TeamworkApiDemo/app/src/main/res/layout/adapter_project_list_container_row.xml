<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="4"
    android:paddingTop="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/adapterProjectRowDetailContainer"
        android:layout_weight="4"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.vishnus1224.teamworkapidemo.ui.customview.OneLetterImageView
            android:id="@+id/adapterProjectsRowImageFirstLetter"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/adapterProjectsRowTitle"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <CheckBox
        android:id="@+id/adapterProjectRowStar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:button="@drawable/project_list_star" />

</LinearLayout>